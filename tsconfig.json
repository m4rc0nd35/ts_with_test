{
   "compilerOptions": {
      "lib": [
         "es5",
         "es6"
      ],
      "target": "es5",
      "module": "commonjs",
      "moduleResolution": "node",
      "outDir": "./build",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
	  "strictPropertyInitialization": false,
	  "forceConsistentCasingInFileNames": true,
	  "esModuleInterop": true,
	  "strict": true,
      "sourceMap": true,
	  "rootDir": "src",
	  "baseUrl": "src",
	  "paths": {"@/*":["*"]}
   }
}